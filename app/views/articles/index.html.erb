<%= render 'layouts/header' %>

<main class="main-contents">

  <div class="main-top">
    <% unless user_signed_in? %>
      <div class="introduction">
        <div class='introduction-top'>
          <h1 class="introduction-top-t">世界を見てみよう</h1>
          <i class="fas fa-globe-asia"></i>
        </div>
        <div class='introduction-bottom'>
          <div class='introduction-bottom-l'>
            <div class='introduction-share'>
              <span class="introduction-share-t">Share</span>
              <i class="fas fa-share-alt"></i>
            </div>
            <div class='introduction-comment'>
              <span class="introduction-comment-t">Comment</span>
              <i class="far fa-comment-alt"></i>
            </div>
            <div class='introduction-favorite'>
              <span class="introduction-favorite-t">Favorite</span>
              <i class="far fa-star"></i>
            </div>
          </div>
          <div class='introduction-bottom-r'>
            <%= link_to new_user_registration_path, class: 'introduction-signup' do%>
              <span>
              Go<br>
              Sign Up
              </span>
              <i class="fas fa-user-plus"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="main-middle">

    <div class="main-center">
      <div class="contents-tags">
        <h2><%= link_to 'Trend', articles_path(option: "A"), class: "tag" %></h2>
        <h2><%= link_to 'New', articles_path(option: "B"), class: "tag" %></h2>
        <h2><%= link_to 'Music', articles_path(category_id: 2), class: "tag" %></h2>
        <h2><%= link_to 'MAG', articles_path(category_id: 3), class: "tag" %></h2>
        <h2><%= link_to 'Sports', articles_path(category_id: 4), class: "tag" %></h2>
        <h2><%= link_to 'IT', articles_path(category_id: 5), class: "tag" %></h2>
        <h2><%= link_to 'Science', articles_path(category_id: 6), class: "tag" %></h2>
        <h2><%= link_to 'Other', articles_path(category_id: 7), class: "tag" %></h2>
      </div>
      
      <%= render 'layouts/articles'%>

    </div>

    <div class="main-right">
      <%= render 'layouts/tags'%>
    </div>
  </div>
</main>