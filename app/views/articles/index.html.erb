<%= render 'layouts/header' %>

<main class="main-contents">

  <div class="main-top">
    <% unless user_signed_in? %>
      <div class="introduction">
        <div class='introduction-top'>
          <span class="introduction-top-t">世界を見てみよう</span>
          <i class="fas fa-globe-asia"></i>
        </div>
        <div class='introduction-bottom'>
          <div class='introduction-bottom-l'>
            <div class='introduction-share'>
              <span class="introduction-share-t">Share</span>
              <i class="fas fa-share-alt"></i>
            </div>
            <div class='introduction-comment'>
              <span class="introduction-comment-t">Comment</span>
              <i class="far fa-comment-alt"></i>
            </div>
            <div class='introduction-favorite'>
              <span class="introduction-favorite-t">Favorite</span>
              <i class="far fa-star"></i>
            </div>
          </div>
          <div class='introduction-bottom-r'>
            <%= link_to new_user_registration_path, class: 'introduction-signup' do%>
              <span>
              Go<br>
              Sign Up
              </span>
              <i class="fas fa-user-plus"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="main-middle">

    <div class="main-center">
      <div class="contents-tags">
        <%= link_to 'Trend', articles_path(option: "A"), class: "tag" %>
        <%= link_to 'New', articles_path(option: "B"), class: "tag" %>
        <%= link_to 'Music', articles_path(category_id: 2), class: "tag" %>
        <%= link_to 'MAG', articles_path(category_id: 3), class: "tag" %>
        <%= link_to 'Sports', articles_path(category_id: 4), class: "tag" %>
        <%= link_to 'IT', articles_path(category_id: 5), class: "tag" %>
        <%= link_to 'Science', articles_path(category_id: 6), class: "tag" %>
        <%= link_to 'Other', articles_path(category_id: 7), class: "tag" %>
      </div>
      <% if @articles.present?%>
        <div class="article-lists">
          <% @articles.each do |article| %>
            <div class="article-list">
              <div class="article-top">
                <%= image_tag article.image, class: "article-img" if article.image.attached? %>
              </div>
              <div class="article-bottom">
                <%= link_to article.title, article_path(article.id), class: "article-title" %>
                <div class="article-day">
                  <%= article.updated_at.strftime("%Y-%m-%d %H:%M") %>
                </div>
              </div>
            </div>
          <% end %>
        </div>

      <% else %>
        <div class="article-lists">
          <div class='article-list'>
              <div class='article-left'>
                <%= image_tag 'spicewolf.jpg', class: "article-img" %>
              </div>

              <div class='article-right'>
                <%= link_to "ポートフォリオサイト", '#', class: "article-title" %>
              </div>
            </div>
          </div>
      <% end %>
    </div>

    <div class="main-right">
      <%= link_to  'All Tags', tags_path, class: "alltags-link"%>
      <div class="tag-lists">
        <% if @tags.present? %>
          <% @tags.each do |tag| %>
            <%= link_to "#{tag.name}(#{tag.articles.length})", tag_path(id: tag.id), class: "tag-link" %>
          <% end %>
        <% end %>
      </div>
    </div>

  </main>